<body class="text-center">
<div class="container">
  <form class="form-signin" action="/register" method="POST" class="row g-3">
    <!-- Nume -->
    <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">Nume</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" name="nume" placeholder="nume">
  </div>
  <!-- Prenume -->
  <div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">Prenume</label>
  <input type="text" class="form-control" id="exampleFormControlInput1" name="prenume" placeholder="Prenume">
</div>
<!-- Telefon -->
<div class="mb-3">
  <label for="phone"class="form-label" >Telefon</label>
<input type="tel" class="form-control" id="phone" name="telefon" pattern="[0-9]{10}" placeholder="07XXXXXXXX" >
</div>
<!-- Varsta -->
<div class="mb-3">
  <label for="birthday" class="form-label">Varsta</label>
  <input type="date" class="form-control" id="birthday" name="varsta">
</div>
<!-- Email -->
<div class="mb-3">
<label for="exampleFormControlInput1" class="form-label">Email</label>
<input type="email" class="form-control" id="exampleFormControlInput1" name="email" placeholder="name@example.com">
</div>
<!-- Parola -->
<div class="mb-3">
  <label for="pwd">Parola</label>
  <input type="password" class="form-control" id="pwd" name="parola" placeholder="password">
</div>
<div class="mb-3">
     <div class="card login-card social-block">
       <div class="card-body">
         <button class="btn btn-block btn-social" href="/index" role="button">
           Trimite
         </button>
       </div>
     </div>
   </div>
<p>Sau</p>
<hr>
